
[user]
    name = averagehuman
    email = cyclebelfast@gmail.com

[github]
    user = averagehuman

[core]
    excludesfile = ~/.gitignore
    editor = /usr/bin/vim
    pager = less -R

[push]
    default = simple

[color]
    ui = auto

[color "diff"]
    meta = blue bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "branch"]
    current = yellow reverse
    local = yellow bold
    remote = green bold
    plain = red bold

[color "status"]
    added = green bold
    changed = magenta
    untracked = blue bold

[alias]
    st = status
    ci = commit
    br = branch
    co = checkout
    df = diff
    lg = log -p
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    ls = ls-files

[help]
    autocorrect = 1
[merge]
	conflictstyle = diff3
